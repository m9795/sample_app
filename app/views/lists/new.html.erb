<h1 class="new-post"> New post</h1>
<% if @list.errors.any? %>
  <%= @list.errors.count %>件のエラーが発生しました
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="form">
  <%= form_with model: @list, url: '/lists', method: :post do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <h4>image</h4>
    <%= f.file_field :image, accept: "image/*" %>
    <%= f.submit '投稿' %>
  <% end %>  
</div>

